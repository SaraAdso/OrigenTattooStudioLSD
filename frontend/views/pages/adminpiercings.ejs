<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Origen Tattoo</title>
    <%- include ('../partials/datatable.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
        <link rel="stylesheet" href="/assets/styles/navbaradmin.css">
        <link rel="stylesheet" href="/assets/styles/admintattoo.css">

</head>

<body>
    <%- include ('../partials/navbaradmin.ejs') %>
        <div class="mx-3 mt-3">
            <div class="table-responsive">
                <table id="tablepiercings" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">id</th>
                            <th scope="col" class="text-center">Nombre</th>
                            <th scope="col" class="text-center">Zona</th>
                            <th scope="col" class="text-center">Imagen</th>
                            <th scope="col" class="text-center">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <div class="btn-group-vertical" role="group">
                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                data-bs-target="#modalcreatepiercings">
                                Crear
                            </button>
                            <% piercings.forEach(function(piercing){%>
                                <tr>
                                    <td>
                                        <%=piercing._id%>
                                    </td>
                                    <td>
                                        <%=piercing.nombre%>
                                    </td>
                                    <td>
                                        <%=piercing.zona%>
                                    </td>
                                    <td>
                                        <%=piercing.imagen%>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#modalactpiercings"
                                            onclick="llenarPiercings(`<%=piercing._id%>`, `<%=piercing.nombre%>`, `<%=piercing.zona%>`, `<%=piercing.imagen%>`)">
                                            Editar
                                        </button>
                                        <a href="deletetattoo/<%= piercing._id %>"
                                            class="btn btn-danger btn-sm">Eliminar</a>
                        </div>
                        </td>
                        </tr>
                        <% });%>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="modal fade" id="modalcreatepiercings" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Crear piercing</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/newpiercing" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold " for="nombre">Nombre</label>
                                        <input type="text" id="nombrepiercing" name="nombre"
                                            class="form-control form-control-lg" required />
                                            <div class="invalid-feedback">
                                                Ingresa el nombre, por favor.
                                            </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold" for="zonapiercing">Zona</label>
                                        <input type="text" id="zonapiercing" name="zona"
                                            class="form-control form-control-lg" required/>
                                            <div class="invalid-feedback">
                                                Ingresa la zona, por favor.
                                            </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label fw-bold" for="imagenpiercing">Imagen</label>
                                <input type="file" id="imagenpiercing" name="imagen"
                                    class="form-control form-control-lg" required/>
                                    <div class="invalid-feedback">
                                        Ingresa la imagen, por favor.
                                    </div>
                            </div>


                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-outline-dark ">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalactpiercings" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Actualizar tatuaje</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/updatepiercing" method="post" class="needs-validation" novalidate>
                            <div class="row">
                                <input type="text" id="idactpiercing" name="id" class="form-control form-control-lg"
                                    hidden />


                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="nomactpiercing">Nombre</label>
                                        <input type="text" id="nomactpiercing" name="nombre"
                                            class="form-control form-control-lg" required />
                                            <div class="invalid-feedback">
                                                Ingresa el nombre, por favor.
                                            </div>  
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="zonaactpiercing">Zona</label>
                                        <input type="text" id="zonaactpiercing" name="zona"
                                            class="form-control form-control-lg" required/>
                                            <div class="invalid-feedback">
                                                Ingresa la zona, por favor.
                                            </div>
                                    </div>
                                </div>
                            </div>

                            <input type="text" id="imagenactpiercing" name="imagen" class="form-control form-control-lg"
                                hidden />

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-outline-dark ">Actualizar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <script>
            $(document).ready(function () {
                const table = $('#tablepiercings').DataTable({
                    lengthChange: false,
                    buttons: ['copy', 'excel', 'pdf', 'colvis'],
                });
                table.buttons().container()
                    .appendTo('#datatable_wrapper .col-md-6:eq(0)');
            });

            function llenarPiercings(id, nombre, zona, imagen) {
                idactpiercing.value = id;
                nomactpiercing.value = nombre;
                zonaactpiercing.value = zona;
                imagenactpiercing.value = imagen;
            };
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"></script>
            <script src="/assets/js/validationspiercings.js"></script>

</body>

</html>