<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Origen Tattoo</title>
    <%- include ('../partials/datatable.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
        <link rel="stylesheet" href="/assets/styles/navbaradmin.css">
        <link rel="stylesheet" href="/assets/styles/admintattoo.css">

</head>

<body>
    <%- include ('../partials/navbaradmin.ejs') %>

        <div class="mx-3 mt-3">
            <h1 class="text-center">Citas</h1>
            <div class="table-responsive">
                <table id="tabletattoos" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Fecha de Cita</th>
                            <th scope="col" class="text-center">id Tatuador</th>
                            <th scope="col" class="text-center">id Cliente</th>
                            <th scope="col" class="text-center">id Piercing</th>
                            <th scope="col" class="text-center">id Tatuaje</th>
                            <th scope="col" class="text-center">Estado</th>
                            <th scope="col" class="text-center">Foto de Consentimiento</th>
                            <th scope="col" class="text-center">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <div class="btn-group-vertical" role="group">
                            <button type="button" class="btn btn-light btn-sm fw-bold " data-bs-toggle="modal"
                                data-bs-target="#modalactbooking">
                                Crear
                            </button>
                            <% bookings.forEach(function(booking){%>
                                <tr>
                                    <td>
                                        <%=booking.fechaCita%>
                                    </td>
                                    <td>
                                        <%=booking.idTatuador%>
                                    </td>
                                    <td>
                                        <%=booking.idCliente%>
                                    </td>
                                    <td>
                                        <%=booking.idPiercing%>
                                    </td>
                                    <td>
                                        <%=booking.idTatuaje%>
                                    </td>
                                    <td>
                                        <%=booking.estado%>
                                    </td>
                                    <td>
                                        <%=booking.fotoConsentimiento%>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#modalactbooking"
                                            onclick="llenarBooking('<%=booking._id%>', '<%=booking.fechaCita%>', '<%=booking.idTatuador%>', '<%=booking.idCliente%>', '<%=booking.idPiercing%>', '<%=booking.idTatuaje%>', '<%=booking.estado%>', '<%=booking.fotoConsentimiento%>')">
                                            Editar
                                        </button>
                                        <a href="deletebooking/<%= booking._id %>"
                                            class="btn btn-danger btn-sm">Eliminar</a>
                        </div>
                        </td>
                        </tr>
                        <% });%>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="modal fade" id="modalactbooking" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Crear cita</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/newbooking" method="post" enctype="multipart/form-data" class="m-3">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold " for="fechaCita">Fecha de la cita</label>
                                        <input type="date" id="fechaCita" name="fechaCita"
                                            class="form-control form-control-lg" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label for="idTatuador" class="form-label">Id del Tatuador:</label>
                                        <select name="idTatuador" id="idTatuador">
                                            <option value="">No Aplica</option>
                                            <% tattooartists.forEach(function(tattooartist){%>
                                                 <option value="<%= tattooartist._id %>"><%= tattooartist.nombre %></option>
                                             <% });%>
                                         </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold" for="idCliente">Cliente</label>
                                        <input type="text" id="idCliente" name="idCliente"
                                            class="form-control form-control-lg" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label for="idPiercing" class="form-label">Id del Piercing:</label>
                                        <select name="idPiercing" id="idPiercing">
                                            <option value="">No Aplica</option>
                                            <% piercings.forEach(function(piercing){%>
                                                 <option value="<%= piercing._id %>"><%= piercing.nombre %></option>
                                              <% });%>
                                         </select>
                                    </div>
                                </div>
                            </div>


                            <div class="form-outline mb-4">
                                <label for="idTatuaje" class="form-label">Id del Tatuaje:</label>
                                <select name="idTatuaje" id="idTatuaje">
                                    <option value="">No Aplica</option>
                                    <% tattoos.forEach(function(tattoo){%>
                                        <option value="<%= tattoo._id %>"><%= tattoo.nombre %></option>
                                    <% });%>
                                </select>      
                            </div>
                           

                            <div class="form-outline mb-4">
                                <label class="form-label fw-bold" for="imagentattoo">Imagen</label>
                                <input type="file" id="imagentattoo" name="imagen"
                                    class="form-control form-control-lg" />
                            </div>

                            <label for="estado" class="form-label">Estado:</label>
                            <select name="estado" id="estado">
                                <option value="activo">Activo</option>
                                <option value="inactivo">Inactivo</option>
                            </select>
                            <br>

                            <label for="fotoConsentimiento" class="form-label">Foto del consentimiento:</label>
                            <input type="text" name="fotoConsentimiento" class="form-control" id="fotoConsentimiento" placeholder="Ingrese la foto del consentimiento">

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-outline-dark ">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalactbooking" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Actualizar tatuaje</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/updatebooking" method="post" class="m-3 ">
                            <div class="row">
                                <input type="text" id="idactbooking" name="id" class="form-control form-control-lg"
                                    hidden />


                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="fechaCita">Nombre</label>
                                        <input type="date" id="actfechaCita" name="fechaCita"
                                            class="form-control form-control-lg"
                                            placeholder="Ingrese el nombre del tatuaje" required />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="idTatuador">Autor</label>
                                        <input type="text" id="actidTatuador" name="idTatuador"
                                            class="form-control form-control-lg" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="idCliente">Cliente</label>
                                <input type="text" id="actidCliente" name="idCliente"
                                    class="form-control form-control-lg" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label for="idPiercing" class="form-label">Id del Piercing:</label>
                                        <select name="idPiercing" id="actIdPiercing">
                                            <option value="">No Aplica</option>
                                            <% piercings.forEach(function(piercing){%>
                                                <option value="<%= piercing._id %>"><%= piercing.nombre %></option>
                                            <% });%>
                                        </select><br>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label for="idTatuaje" class="form-label">Id del Tatuaje:</label>
                                        <select name="idTatuaje" id="actIdTatuaje">
                                            <option value="">No Aplica</option>
                                            <% tattoos.forEach(function(tattoo){%>
                                                <option value="<%= tattoo._id %>"><%= tattoo.nombre %></option>
                                            <% });%>
                                        </select>
                                        <br>
                                    </div>
                                </div>
                            </div>


                            <div class="form-outline mb-4">
                                <label class="form-label" for="estado">TÃ©cnica</label>
                                <input type="text" id="actestado" name="estado"
                                    class="form-control form-control-lg" />
                            </div>

                            <input type="text" id="fotoConsentimiento" name="imagen" class="form-control form-control-lg"
                                hidden />

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-outline-dark ">Actualizar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <script>
            $(document).ready(function () {
                const table = $('#tablebooking').DataTable({
                    lengthChange: false,
                    buttons: ['copy', 'excel', 'pdf', 'colvis'],
                });
                table.buttons().container()
                    .appendTo('#datatable_wrapper .col-md-6:eq(0)');
            });

            function llenarBooking(id, fechaCita, idTatuador, idCliente, idPiercing, idTatuaje, estado, fotoConsentimiento){
                console.log(idCliente)
                id.value = id;
                fechaCita.value = fechaCita;
                idTatuador.value = idTatuador;
                idCliente.value = idCliente;
                idPiercing.value = idPiercing;
                idTatuaje.value = idTatuaje;
                estado.value = estado;
                fotoConsentimiento.value = fotoConsentimiento;
            };
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"></script>

</body>

</html>