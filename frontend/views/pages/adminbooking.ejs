<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Base ADMIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="/assets/styles/navbar.css">
</head>

<body>
    <% include ('../partials/navbar.ejs') %>

    <div class="container mt-4"> 
        <table id="tableclients" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">fechaCita</th>
                    <th scope="col">idTatuador</th>
                    <th scope="col">idCliente</th>
                    <th scope="col">idPiercing</th>
                    <th scope="col">idTatuaje</th>
                    <th scope="col">estado</th>
                    <th scope="col">fotoConsentimiento</th>
                    <th scope="col">Acciones</th> 
                </tr>
            </thead>
            <tbody>
                <% booking.forEach(function(booking){%>
                <tr>
                    <td><%=booking._id%></td>
                    <td><%=booking.fechaCita%></td>
                    <td><%=booking.idTatuador%></td>
                    <td><%=booking.idCliente%></td>
                    <td><%=booking.idPiercing%></td>
                    <td><%=booking.idTatuaje%></td>
                    <td><%=booking.estado%></td>
                    <td><%=booking.fotoConsentimiento%></td>
                    <td>
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalactbooking" onclick="llenarBooking('<%=booking._id%>', '<%=booking.fechaCita%>', '<%=booking.idTatuador%>', '<%=booking.idCliente%>', '<%=booking.idPiercing%>', '<%=booking.idTatuaje%>', '<%=booking.estado%>', '<%=booking.fotoConsentimiento%>')">
                            Editar
                        </button>
                        <a href="deletebooking/<%= booking._id %>" class="btn btn-danger">Eliminar</a> 
                    </td>
                </tr>
                <% });%>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="modalactbooking" tabindex="-1" aria-labelledby="modalactLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Actualizar Booking</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="updatebooking" method="POST">
                    
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('#tableclients').DataTable(); // Cambiado el nombre de la tabla a 'tableclients'
        });

        function llenarBooking(id,fechaCita,idTatuador,idCliente,idPiercing,idTatuaje,estado,fotoConsentimiento){
            
            idactbooking.value = id;
            fechactbooking.value = fechaCita;
            idtatooartbooking.value = idTatuador;
            idactclientebooking.value = idCliente;
            piercingactbooking.value = idPiercing;
            tatuajeactbooking.value = idTatuaje;
            estadoactbooking.value = estado;
            consentimactbooking.value = fotoConsentimiento;
        
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</body>

</html>
