<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Base ADMIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="/assets/styles/navbar.css">
</head>

<body>
    <%- include ('../partials/navbar.ejs') %>

    <div class="container">
        <table id="tableclients" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Celular</th>
                    <th scope="col">Documento</th>
                    <th scope="col">Correo</th>
                    <th scope="col">fechaNacimiento</th>
                    <th scope="col">alergias</th>
                    <th scope="col">fotoDocumento</th>
                    <th scope="col">contrasena</th>
                </tr>
            </thead>
            <tbody>
                <% clientes.forEach(function(cliente){%>
                <tr>
                    <td><%=cliente._id%></td>
                    <td><%=cliente.nombre%></td>
                    <td><%=cliente.apellido%></td>
                    <td><%=cliente.celular%></td>
                    <td><%=cliente.documento%></td>
                    <td><%=cliente.correo%></td>
                    <td><%=cliente.fechaNacimiento%></td>
                    <td><%=cliente.alergias%></td>
                    <td><%=cliente.fotoDocumento%></td>
                    <td>
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalactclientes" onclick="llenarClientes('<%=cliente._id%>', '<%=cliente.nombre%>', '<%=cliente.apellido%>', '<%=cliente.celular%>', '<%=cliente.documento%>', '<%=cliente.correo%>', '<%=cliente.fechaNacimiento%>', '<%=cliente.alergias%>', '<%=cliente.fotoDocumento%>', '<%=cliente.contrasena%>')">
                            Editar
                        </button>
                        <a href="deleteclient/<%= cliente._id %>">Eliminar</a>
                    </td>
                </tr>
                <% });%>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="modalactclientes" tabindex="-1" aria-labelledby="modalactLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Actualizar Cliente</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="updateclient" method="POST">
                        <label for="idactcliente">Id:</label>
                        <input type="text" name="idcliente" class="form-control" id="idactcliente" placeholder="" readonly>

                        <label for="nomactcliente" class="form-label">Nombre:</label>
                        <input type="text" name="nombreactCliente" class="form-control" id="nomactcliente" placeholder="Ingrese el nombre" >

                        <label for="apeactcliente" class="form-label">Apellido:</label>
                        <input type="text" name="apellidoactCliente" class="form-control" id="apeactcliente" placeholder="Ingrese su apellido">
                
                        <label for="celactcliente" class="form-label">Celular:</label>
                        <input type="text" name="celactCliente" class="form-control" id="celactcliente" placeholder="Ingrese el teléfono" >
                        
                        <label for="corractcliente" class="form-label">Correo:</label>
                        <input type="text" name="correoactCliente" class="form-control" id="corrctcliente" placeholder="Ingrese su correo">
                        
                        <label for="fechactcliente" class="form-label">Fecha Nacimiento:</label>
                        <input type="text" name="fehaNacimientoactCliente" class="form-control" id="fechactcliente" placeholder="Ingrese su fecha de nacimiento">
                        
                        <label for="aleractcliente" class="form-label">Alergias:</label>
                        <input type="text" name="alergiasactCliente" class="form-control" id="aleractcliente" placeholder="Ingrese sus alergias">
                    
                        <label for="fotoactcliente" class="form-label">Foto Documento:</label>
                        <input type="text" name="fotoactCliente" class="form-control" id="fotoactcliente" placeholder="Foto">
                        
                        <label for="contraactcliente" class="form-label">Contraseña:</label>
                        <input type="text" name="contraactCliente" class="form-control" id="contractcliente" placeholder="Ingrese su contraseña">
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Actualizar cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#tableclients').DataTable()

        function llenarClientes(id,nombre,apellido,celular,correo,fechaNacimiento,alergias,fotoDocumento,contrasena){
            idactcliente.value = id;
            nomactcliente.value = nombre;
            apeactcliente.value = apellido;
            celactcliente.value = celular;
            corractcliente.value = correo;
            fechactcliente.value = fechaNacimiento;
            aleractcliente.value = alergias;
            fotoactcliente.value = fotoDocumento;
            contractcliente.value = contrasena;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</body>

</html>
