<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Origen Tattoo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/assets/styles/makebooking.css">
    <link rel="stylesheet" href="/assets/styles/navbaradmin.css">
</head>

<body>

    <%- include ('../partials/navbar.ejs') %>

        <div class="container mt-5 text-center">
            <section class="h-100">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col">
                            <div class="card card-registration my-4">
                                <div class="row g-0">
                                    <div class="col-xl-6 d-none d-xl-block">
                                        <img src="/assets/images/espaldastatuadas.jpeg"
                                            class="h-100 w-100 object-fit-cover " alt="Sample photo" class="img-fluid"
                                            style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="card-body p-md-5 text-black">
                                            <h2 class="mb-5">Registro de clientes</h2>


                                            <form action="/guardarbooking" method="POST">
                                                <input type="hidden" name="id" class="form-control" id="idactbooking" placeholder="" readonly>
                                                
                                                <label for="fechaCita" class="form-label">Fecha de la cita:</label>
                                                <input type="date" name="fechaCita" class="form-control" id="fechaCita"  min="2023-01-01" placeholder="Ingrese fecha de la cita" >
                        
                                                <label for="idTatuador" class="form-label">Tatuador:</label>
                                                <input type="text" name="idTatuador" class="form-control" id="idTatuador" placeholder="Ingresa tu tatuador de preferencia">
                                    
                                                <label for="idCliente" class="form-label">Correo electrónico:</label>
                                                <input type="text" name="idCliente" class="form-control" id="idCliente" placeholder="Ingresa tu correo electrónico"> <br>
                                                
                                                <label for="idPiercing" class="form-label">Piercing:</label>
                                                <select name="idPiercing" id="idPiercing">
                                                    <option value="">No Aplica</option>
                                                    <% piercings.forEach(function(piercing){%>
                                                        <option value="<%= piercing._id %>"><%= piercing.nombre %></option>
                                                    <% });%>
                                                </select><br>
                                                
                                                <label for="idTatuaje" class="form-label">Id del Tatuaje:</label>
                                                <select name="idTatuaje" id="idTatuaje">
                                                    <option value="">No Aplica</option>
                                                    <% tattoos.forEach(function(tattoo){%>
                                                        <option value="<%= tattoo._id %>"><%= tattoo.nombre %></option>
                                                    <% });%>
                                                </select><br>
                        
                                                <label for="fotoConsentimiento" class="form-label">Foto del consentimiento:</label>
                                                <input type="text" name="fotoConsentimiento" class="form-control" id="fotoConsentimiento" placeholder="Ingrese la foto del consentimiento">
                        
                                                <div class="modal-footer">
                                            
                                                    <button type="submit" class="btn btn-primary">Agenda tu cita</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
            <script>
                var fecha = new Date();
                var anio = fecha.getFullYear();
                var dia = fecha.getDate();
                var _mes = fecha.getMonth();
                _mes = _mes + 1;
                { var mes = "0" + _mes;}
                else { 
                    var mes = _mes.toString;
                }
                document.getElementById("fechaCita").min = anio+'-'+mes+'-'+dia; 
            </script>
</body>

</html>
